# =============================================================================
# MgmtSays Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=mgmtsays
POSTGRES_PASSWORD=mgmtsays_dev
POSTGRES_DB=mgmtsays
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full connection string (constructed from above or override directly)
DATABASE_URL=postgresql+asyncpg://mgmtsays:mgmtsays_dev@localhost:5432/mgmtsays

# -----------------------------------------------------------------------------
# Vector Store (ChromaDB)
# -----------------------------------------------------------------------------
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_AUTH_TOKEN=dev_token

# -----------------------------------------------------------------------------
# LLM Providers
# -----------------------------------------------------------------------------
# OpenAI (required for embeddings and optional for LLM)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (optional, for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Default LLM provider: "openai" or "anthropic"
DEFAULT_LLM_PROVIDER=openai

# Default models
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-opus-20240229
EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
# Storage backend: "local" or "s3"
STORAGE_BACKEND=local
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50

# S3 Configuration (if STORAGE_BACKEND=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=mgmtsays-documents

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8080
API_PREFIX=/api/v1

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8080
